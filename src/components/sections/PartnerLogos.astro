---
import type { ImageMetadata } from 'astro';
import { Image } from "astro:assets"

import Logo from "../common/Logo.astro"


export interface Props {
    text?: string;
    id?:string;
    logos?: any;
    sectionClasses?: string;
}
const {text, logos, id, sectionClasses} = Astro.props


import placeholder from "~/assets/partner-logos/techrepublic.svg"

---

<section class:list={["flex w-full gap-4 items-center jusify-centre min-h-32 my-8  lg:flex-row flex-col p-4 sm:py-8 sm:px-6 md:px-8", sectionClasses]} id={id}>

    <div class="flex-auto text-sm font-bold w-1/3 text-center lg:text-left">
        {text}
    </div>

    <div class="flex-auto flex gap-4 justify-around  w-full flex-wrap items-center animate-fade-in ">
            <!-- LOGOS -->
        {
            logos.map((logo:any, i: any) => (
                <Image src={placeholder} alt={logo.name} class="h-12 max-w-32 " />  
            ))
        }
        
    </div>
</section>