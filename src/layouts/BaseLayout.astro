---
import '~/styles/global.css'


import BaseHead, { type Props as HeadProps } from '~/components/page/BaseHead.astro';
import SkipLink from "~/components/common/SkipLink.astro";
import Header, { type Props as HeaderProps } from "~/components/page/Header.astro";
import Footer from "~/components/page/Footer.astro";
import Footer9 from '~/components/page/Footer9.astro';
import Cookies from "~/components/cookies/Cookies.astro";

interface Props extends HeadProps, HeaderProps {
	class?: string;
    type?: string;
}

const { class: classList, header = "opaque", type = "website", ...head } = Astro.props;
---

<html dir="ltr" lang="en">
	<head>
        <BaseHead {...head} />
	</head>

	<body class="flex flex-col w-full items-center bg-neutral text-primary-100 relative ">
		<SkipLink />
        
        <Header {header} fontColors=" text-primary  hover:text-(--onPrimary) hover:bg-(--surfaceTint) rounded-lg "/>

        <main class:list={[" z-0  flex-auto max-w-7xl w-[95svw]  overflow-x-hidden flex  flex-col items-center justify-start   mb-12 space-y-8 md:space-y-32 animate-fade-in" ]}>
            <slot />
        </main>

        
        <Footer9 boxClasses=" bg-primary-50 text-white w-full" footerClasses="max-w-7xl w-[95svw]" footer/>
        
        <!-- <Cookies /> -->
	</body>
</html>